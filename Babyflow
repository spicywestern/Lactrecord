<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="theme-color" content="#f9fafb">
    
    <title>BabyFlow Pro</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    
    <style>
        body { 
            -webkit-tap-highlight-color: transparent; 
            font-family: -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; 
            overscroll-behavior-y: contain; /* Evita el rebote al deslizar */
        }
        .card { border-radius: 2rem; }
        .btn-active { background-color: #3b82f6 !important; color: white !important; }
        /* Mejora visual para botones en cualquier navegador */
        button:active { transform: scale(0.96); transition: 0.1s; }
    </style>
</head>
<body class="bg-gray-50 min-h-screen p-4 pb-20">

    <div class="max-w-md mx-auto">
        <header class="text-center my-6">
            <h1 class="text-3xl font-black text-gray-800 tracking-tighter">BabyFlow Pro</h1>
            <p class="text-xs text-gray-400 font-bold uppercase tracking-widest">Lactancia & Peso</p>
        </header>

        <div class="grid grid-cols-2 gap-4 mb-6">
            <div class="bg-white p-4 rounded-3xl text-center shadow-sm border border-gray-100">
                <p class="text-[10px] text-gray-400 uppercase font-black">Evolución Peso</p>
                <p id="evolucionPeso" class="text-xl font-bold text-blue-600">+0.000 kg</p>
            </div>
            <div class="bg-white p-4 rounded-3xl text-center shadow-sm border border-gray-100">
                <p class="text-[10px] text-gray-400 uppercase font-black">Siguiente Toma</p>
                <p id="proximaHora" class="text-xl font-bold text-pink-600">--:--</p>
            </div>
        </div>

        <div id="cardToma" class="bg-white p-6 card mb-6 shadow-md border-2 border-transparent transition-all">
            <div id="estadoReposo">
                <p class="text-center text-gray-400 text-sm mb-1 font-medium">Lado sugerido:</p>
                <p id="sugerenciaLado" class="text-center text-2xl font-black text-pink-600 mb-6 uppercase">IZQUIERDO</p>
                <div class="flex gap-4">
                    <button onclick="iniciarToma('Izquierdo')" class="flex-1 bg-pink-50 py-6 rounded-2xl font-bold text-pink-700">IZQ</button>
                    <button onclick="iniciarToma('Derecho')" class="flex-1 bg-green-50 py-6 rounded-2xl font-bold text-green-700">DER</button>
                </div>
            </div>
            <div id="estadoActivo" class="hidden text-center">
                <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4 animate-pulse">
                    <div class="w-4 h-4 bg-red-500 rounded-full"></div>
                </div>
                <p id="timerText" class="text-xl font-black text-gray-800 mb-1">Lado Izquierdo</p>
                <p id="horaInicioDisplay" class="text-gray-400 text-sm mb-6">Inició: 12:00</p>
                <button onclick="finalizarToma()" class="w-full bg-red-500 text-white py-5 rounded-2xl font-black shadow-lg">FINALIZAR TOMA</button>
            </div>
        </div>

        <div class="bg-white p-6 card mb-6 shadow-sm border border-gray-100">
            <div class="mb-6">
                <p class="font-bold text-gray-800 mb-3 text-sm">⏱️ Intervalo Alarma</p>
                <div class="flex justify-between bg-gray-100 p-1 rounded-2xl">
                    <button onclick="setAlarma(1)" class="btn-h flex-1 py-2 rounded-xl text-sm font-bold" id="h1">1h</button>
                    <button onclick="setAlarma(2)" class="btn-h flex-1 py-2 rounded-xl text-sm font-bold" id="h2">2h</button>
                    <button onclick="setAlarma(3)" class="btn-h flex-1 py-2 rounded-xl text-sm font-bold" id="h3">3h</button>
                    <button onclick="setAlarma(4)" class="btn-h flex-1 py-2 rounded-xl text-sm font-bold" id="h4">4h</button>
                </div>
            </div>
            
            <p class="font-bold text-gray-800 mb-3 text-sm">⚖️ Registro de Peso</p>
            <div class="flex gap-2">
                <input type="text" id="inputPeso" inputmode="decimal" placeholder="3.500" class="flex-1 bg-gray-100 rounded-2xl px-4 py-3 outline-none focus:ring-2 ring-blue-500 text-lg">
                <button onclick="registrarPeso()" class="bg-blue-600 text-white px-6 rounded-2xl font-bold">OK</button>
            </div>
        </div>

        <div class="px-2">
            <h2 class="font-black text-gray-400 text-[10px] uppercase tracking-widest mb-4">Historial Reciente</h2>
            <div id="listaHistorial" class="space-y-3"></div>
        </div>
    </div>

    <script>
        // Versión de almacenamiento para evitar conflictos
        const DB_PREFIX = "BF_APP_";

        let tomas = JSON.parse(localStorage.getItem(DB_PREFIX + 'tomas')) || [];
        let pesos = JSON.parse(localStorage.getItem(DB_PREFIX + 'pesos')) || [];
        let config = JSON.parse(localStorage.getItem(DB_PREFIX + 'config')) || { alarma: 3 };
        let tomaActiva = null;

        function actualizarUI() {
            localStorage.setItem(DB_PREFIX + 'tomas', JSON.stringify(tomas));
            localStorage.setItem(DB_PREFIX + 'pesos', JSON.stringify(pesos));
            localStorage.setItem(DB_PREFIX + 'config', JSON.stringify(config));

            // Botones Alarma
            document.querySelectorAll('.btn-h').forEach(b => b.classList.remove('btn-active', 'bg-white', 'shadow-sm'));
            const btnSel = document.getElementById('h' + config.alarma);
            btnSel.classList.add('btn-active', 'shadow-sm');

            // Sugerencia
            const ultimoLado = tomas[0]?.lado || 'Derecho';
            document.getElementById('sugerenciaLado').innerText = ultimoLado === 'Izquierdo' ? 'DERECHO' : 'IZQUIERDO';

            // Dashboard
            if (tomas.length > 0) {
                const [h, m] = tomas[0].fin.split(':');
                const fechaFin = new Date();
                fechaFin.setHours(parseInt(h), parseInt(m), 0);
                const proxima = new Date(fechaFin.getTime() + config.alarma * 60 * 60 * 1000);
                document.getElementById('proximaHora').innerText = proxima.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            }

            if (pesos.length > 1) {
                const diff = (pesos[0].valor - pesos[pesos.length - 1].valor).toFixed(3);
                document.getElementById('evolucionPeso').innerText = (diff >= 0 ? '+' : '') + diff + ' kg';
            }

            // Lista
            const lista = document.getElementById('listaHistorial');
            lista.innerHTML = '';
            tomas.slice(0, 10).forEach((t) => {
                const div = document.createElement('div');
                div.className = "bg-white p-4 rounded-3xl shadow-sm flex justify-between items-center border border-gray-50";
                div.innerHTML = `
                    <div class="flex items-center gap-3">
                        <div class="w-8 h-8 rounded-full flex items-center justify-center text-xs font-black ${t.lado === 'Izquierdo' ? 'bg-pink-100 text-pink-600' : 'bg-green-100 text-green-600'}">
                            ${t.lado[0]}
                        </div>
                        <div>
                            <p class="text-[9px] text-gray-400 font-bold uppercase leading-none mb-1">${t.fecha}</p>
                            <p class="font-bold text-gray-800 text-sm leading-none">${t.duracion} min | ${t.inicio} hs</p>
                        </div>
                    </div>
                    <button onclick="borrarToma(${t.id})" class="text-gray-200 text-2xl px-2">&times;</button>
                `;
                lista.appendChild(div);
            });
        }

        function iniciarToma(lado) {
            tomaActiva = { inicio: new Date(), lado: lado };
            document.getElementById('estadoReposo').classList.add('hidden');
            document.getElementById('estadoActivo').classList.remove('hidden');
            document.getElementById('timerText').innerText = `Lado ${lado}`;
            document.getElementById('horaInicioDisplay').innerText = `Inició: ${tomaActiva.inicio.toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'})}`;
            document.getElementById('cardToma').classList.add('border-pink-200');
        }

        function finalizarToma() {
            const fin = new Date();
            const duracion = Math.round((fin - tomaActiva.inicio) / 60000);
            tomas.unshift({
                id: Date.now(),
                fecha: fin.toLocaleDateString([], {day:'2-digit', month:'2-digit'}),
                inicio: tomaActiva.inicio.toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}),
                fin: fin.toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}),
                duracion,
                lado: tomaActiva.lado
            });
            document.getElementById('estadoReposo').classList.remove('hidden');
            document.getElementById('estadoActivo').classList.add('hidden');
            document.getElementById('cardToma').classList.remove('border-pink-200');
            actualizarUI();
        }

        function setAlarma(h) {
            config.alarma = h;
            actualizarUI();
        }

        function registrarPeso() {
            const val = document.getElementById('inputPeso').value.replace(',', '.');
            const num = parseFloat(val);
            if(isNaN(num)) return alert("Peso inválido");
            pesos.unshift({ id: Date.now(), fecha: new Date().toLocaleDateString(), valor: num });
            document.getElementById('inputPeso').value = '';
            actualizarUI();
        }

        function borrarToma(id) {
            if(confirm("¿Borrar registro?")) {
                tomas = tomas.filter(t => t.id !== id);
                actualizarUI();
            }
        }

        actualizarUI();
    </script>
</body>
</html>
